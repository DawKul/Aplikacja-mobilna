<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplikacja_Treningowa.Strony.Strona3"
          
             Title="Ustawienia">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,4" EndPoint="1,1">
            <GradientStop Color="white" Offset="0.1" />
            <GradientStop Color="DarkGray" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>



    <StackLayout Padding="20" Spacing="30" VerticalOptions="Start">

        <Button Text="Ustawienia ćwiczeń"
                    FontSize="18"
                    BackgroundColor="MediumPurple"
                    TextColor="black"
                    CornerRadius="6"
                    Clicked="OnUstawieniaCwiczenClicked" />
        <Button Text="Powiadomienia"
                    FontSize="18"
                    BackgroundColor="MediumPurple"
                    TextColor="black"
                    CornerRadius="6"
                    Clicked="OnPowiadomieniaClicked" />
        <Button Text="Język"
                    FontSize="18"
                    BackgroundColor="MediumPurple"
                    TextColor="black"
                    CornerRadius="6"
                    Clicked="OnJezykClicked" />

    </StackLayout>

</ContentPage>
