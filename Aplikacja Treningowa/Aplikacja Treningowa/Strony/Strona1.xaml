<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplikacja_Treningowa.Strony.Strona1"
             Title="">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="white" Offset="0.0" />
            <GradientStop Color="DarkGreen" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Border Style="{StaticResource Border.Page}">
        <ScrollView>
            <Grid RowDefinitions="0.3*,0.4*,0.3*" ColumnDefinitions="0.1*,0.8*,0.1*">
                <Grid Grid.Row="1" Grid.Column="1">
                    <RoundRectangle Margin="-5,-15,-5,0" CornerRadius="30,30,30,30" Fill="LightGray"></RoundRectangle>
                    <StackLayout Padding="20" VerticalOptions="Center">
                        <Label x:Name="ResultLabel"
                   Text="Wynik pojawi siÄ™ tutaj"
                   HorizontalOptions="Center"
                   FontSize="Large" TextColor="black" />
                        <Button Text="Start"
                    Clicked="OnStartButtonClicked"
                    HorizontalOptions="Center"
                    Margin="20"/>
                    </StackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </Border>
</ContentPage>